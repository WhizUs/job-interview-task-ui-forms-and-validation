{
  "name": "Angular and Java Dev Container",
  "image": "mcr.microsoft.com/devcontainers/java:17",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "none",
      "installGradle": "true",
      "installMaven": "true"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-gradle",
        "angular.ng-template",
        "redhat.java"
      ],
      "settings": {
      }
    }
  },
  "forwardPorts": [
    4200,
    8080
  ]
}